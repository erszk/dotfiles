#### PREAMBLE
snippet dc "documentclass" b
\documentclass[${1:X}]{${2:class}}$0
endsnippet

snippet up "usepackage" b
\usepackage$1{${2:package}}$0
endsnippet

snippet nc "newcommand" b
\newcommand\{${1:new}\}\{${2:old}\}$0
endsnippet
####


#### FULL-DOC TEMPLATES
snippet chic "Chicago Style (notes)" b
\documentclass[12pt]{article}%{{{
\usepackage[margin=1in]{geometry}
\usepackage{setspace}
\usepackage[utf8]{inputenc}
\usepackage[T1]{fontenc}
\usepackage{fancyhdr}
\usepackage[notes, isbn=false, backend=biber]{biblatex-chicago}
\addbibresource{../bib/${3:bibfile}.bib}

\pagestyle{fancy}
\fancyhf{}
\renewcommand{\headrulewidth}{0pt}
\rfoot{\thepage}%}}}

\begin{document}
\nocite{*} % comment out or delete after first citation
\frenchspacing

\noindent Louis Thompson\\\\
${1:class}\\\\
% professor\\\\
\today
\begin{center}
	${2:title}
\end{center}
\doublespacing

$0

\cleardoublepage
\printbibliography
\end{document}
endsnippet
####


#### TABLES
snippet mp2 "side-by-side figures using minipage" b
\begin{figure}[htp]
\centering
	\begin{minipage}{3in}
		\centering
		${1:\includegraphics[${2:width = \linewidth}]{${3:file}}}
		\caption{${4:caption}}
		\label{fig:${5:label}}
	\end{minipage}%
	\hspace{0.5in}%
	\begin{minipage}{3in}
		\centering
		${6:\includegraphics[${7:width = \linewidth}]{${8:file}}}
		\caption{${9:caption}}
		\label{fig:${10:label}}
\end{minipage}
\end{figure}$0
endsnippet
